<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Details</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% totaltodate = 0.0 %>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.date %></td>
        <td><%= order.details %></td>
        <td><%= order.total %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% totaltodate += order.total %> 
    <% end %>
  </tbody>
</table>
  <p>Total to date: <%= totaltodate %></p>

<br>

